{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],
    "baseUrl": "./src",
    "moduleResolution": "node",
    "strict": true,
    "allowJs": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "isolatedModules": true,
    "removeComments": false,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,

    "incremental": true,

    "paths": {
      "@studio/*": ["schema/*"]
    }
  },
  "exclude": [
    "dist",
    ".next",
    "out",
    "next.config.js",
    "postcss.config.js",
    "tailwind.config.js",
    "src/server/index.js"
  ],
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"]
}
